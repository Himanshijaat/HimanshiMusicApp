<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shadow_background">


    <ImageView
        android:id="@+id/festivalImage"
        android:layout_height="fill_parent"
        android:layout_width="80dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        />


    <TextView
        android:id="@+id/festivalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_alignRight="@+id/festivalImage"
        android:layout_marginLeft="10dp"
        android:text="गुरु पाठ"
        android:padding="5dp"/>
    </LinearLayout>

        <Button
            android:id="@+id/fest_download_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_alignRight="@+id/linearlayout"
            android:layout_alignParentRight="true"
            android:background="@drawable/download"
            />

        <ProgressBar
            android:id="@+id/fest_progressBar1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_alignRight="@+id/linearlayout"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:indeterminateTint="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/fest_play_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignRight="@+id/linearlayout"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@drawable/playm"/>

</RelativeLayout>
